@model InventoryPage;
@{
    ViewData["Title"] = "Home Page";
}

<button class="btn btn-success justify-content-start"><a style="text-decoration:none; color:white" asp-controller="Inventory" asp-action="InventoryPage">Back</a></button>
<form method="post">
    <div class="text-center">
        <h1 style="padding-bottom:8%; padding-top:15px" class="display-4">Inventory Add</h1>
        <div style="margin-inline:24%">
            <div class="mb-2 row">
                <label class="col-sm-2 col-form-label text-end">Name of the Item:</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" id="username" autofocus>

                </div>
            </div>
            <div class="mb-2 row">
                <label class="col-sm-2 col-form-label text-end">Type of the Item:</label>
                <div class="col-sm-10">
                    <input asp-for="Type" type="text" class="form-control" id="inputType">
                </div>
            </div>
            <div class="mb-2 row">
                <label class="col-sm-2 col-form-label text-end">Purchase Date:</label>
                <div class="col-sm-10">
                    <input asp-for="PurchaseDate" type="text" class="form-control" placeholder="YYYY-MM-DD" id="inputPassword">
                </div>
            </div>
            <div class="mb-2 row">
                <label class="col-sm-2 col-form-label text-end">Price:</label>
                <div class="col-sm-10">
                    <input asp-for="Price" type="text" class="form-control" id="inputPrice">
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-success" style="color:white; text-decoration:none">Save Item</button>
            </div>
        </div>
    </div>
</form>